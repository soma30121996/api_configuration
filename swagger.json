{
  "openapi": "3.0.0",
  "info": {
    "title": "AI Hub Authentication API",
    "version": "1.0.0",
    "description": "API demonstrating Public, API-Key, Basic Auth, OAuth2 and Bearer Token authentication methods for AI Hub."
  },
  "servers": [
    {
      "url": "http://localhost:3000",
      "description": "Local server"
    }
  ],

  "components": {
    "securitySchemes": {
      "api_key": {
        "type": "apiKey",
        "in": "header",
        "name": "x-api-key"
      },
      "basicAuth": {
        "type": "http",
        "scheme": "basic"
      },
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      },
      "oauth2": {
        "type": "oauth2",
        "flows": {
          "password": {
            "tokenUrl": "/token",
            "scopes": {}
          }
        }
      }
    }
  },

  "paths": {
    "/public": {
      "get": {
        "summary": "Publicly accessible route",
        "description": "Returns AI Hub project information without authentication.",
        "responses": {
          "200": {
            "description": "Public AI Hub details"
          }
        }
      }
    },

    "/apikey-protected": {
      "get": {
        "summary": "API Key protected route",
        "security": [
          {
            "api_key": []
          }
        ],
        "responses": {
          "200": {
            "description": "Access granted using API Key"
          },
          "403": {
            "description": "Invalid API key"
          }
        }
      }
    },

    "/basic-protected": {
      "get": {
        "summary": "Basic Auth protected route",
        "security": [
          {
            "basicAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Access granted using Basic Auth"
          },
          "401": {
            "description": "Invalid credentials"
          }
        }
      }
    },

    "/token": {
      "post": {
        "summary": "Generate OAuth2 token (login simulation)",
        "description": "Returns a JWT token when valid credentials are provided.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "username": { "type": "string" },
                  "password": { "type": "string" }
                },
                "required": ["username", "password"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Token generated successfully"
          },
          "401": {
            "description": "Invalid username or password"
          }
        }
      }
    },

    "/oauth2-protected": {
      "get": {
        "summary": "OAuth2 protected route",
        "security": [
          {
            "oauth2": []
          }
        ],
        "responses": {
          "200": {
            "description": "Access granted using OAuth2"
          },
          "403": {
            "description": "Invalid or missing OAuth2 token"
          }
        }
      }
    },

    "/bearer-protected": {
      "get": {
        "summary": "Bearer token protected route",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Access granted using Bearer token"
          },
          "403": {
            "description": "Invalid or missing Bearer token"
          }
        }
      }
    }
  }
}
